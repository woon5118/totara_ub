{{!

    @template criteria_linkedcourses/linkedcourses

    Template for management of Linked Courses criteria

    Classes required for JS:
        * none

    Data attributes required for JS:
        * data-core-autoinitialise: State of this JS auto initilise
        * data-core-autoinitialise-amd: AMD to be linked to template
        * data-tw-criterionLinkedCourses: Target for linked courses criterion
        * data-tw-criterionLinkedCourses-detail: Target for detail section
        * data-tw-criterionLinkedCourses-aggregation: Target for aggregation section
        * data-tw-criterionLinkedCourses-aggregationMethod: int, Section for the specific aggregation method
        * data-tw-criterionLinkedCourses-aggregationMethod-changed: Trigger when user changes aggregation method
        * data-tw-criterionLinkedCourses-aggregationCount: Section for aggregation required count
        * data-tw-criterionLinkedCourses-aggregationCount-changed: Trigger when user changes the required count

    Context variables required for this template:
        * key

}}

<div data-tw-criterionLinkedCourses=""
data-core-autoinitialise="true"
data-core-autoinitialise-amd="criteria_linkedcourses/linkedcourses"
data-tw-loader-target="">

    <div {{^error}}class="tw-editAchievementPaths--hidden"{{/error}} data-tw-criterionLinkedCourses-error="">
        <span class="tw-editAchievementPaths__criterionForm-warning">
            {{#flex_icon}}notification-warning{{/flex_icon}}
            {{error}}
        </span>
    </div>

    <form class="tw-editAchievementPaths__criterionForm"
    data-tw-criterionLinkedCourses-aggregation="{{#aggregation}}{{method}}{{/aggregation}}{{^aggregation}}1{{/aggregation}}"
    data-tw-criterionLinkedCourses-aggregation-reqitems="{{#aggregation}}{{reqitems}}{{/aggregation}}{{^aggregation}}1{{/aggregation}}">

        <h5 class="tw-editAchievementPaths__criterionForm-title" id="tw_criterionLinkedCourses-radioGroup-label-{{key}}">
            {{#str}}aggregation, totara_criteria{{/str}}
        </h5>

        <div role="radiogroup" aria-labelledby="tw_criterionLinkedCourses-radioGroup-label-{{key}}" aria-describedby="criterion_title--{{key}}" class="tw-editAchievementPaths__criterionForm-items">
            <div data-tw-criterionLinkedCourses-aggregationMethod="1">
                <input type="radio"
                id="tw_criterionLinkedCourses_agg_all__{{key}}"
                name="tw_criterionLinkedCourses_agg__{{key}}"
                value="1"
                data-tw-criterionLinkedCourses-aggregationMethod-changed="all"/>

                <label class="tw-editAchievementPaths__criterionForm-label" for="tw_criterionLinkedCourses_agg_all__{{key}}">
                    {{#str}}complete_all, totara_criteria {{/str}}
                </label>
                <span class="tf_loading" style="display: none;">
                    {{#pix}} i/loading, core, loading, totara_core{{/pix}}
                </span>
            </div>

            <div class="tw-editAchievementPaths__criterionForm-item" data-tw-criterionLinkedCourses-aggregationMethod="2">
                <input type="radio"
                id="tw_criterionLinkedCourses_agg_any__{{key}}"
                name="tw_criterionLinkedCourses_agg__{{key}}"
                value="2"
                data-tw-criterionLinkedCourses-aggregationMethod-changed="any"/>

                <label class="tw-editAchievementPaths__criterionForm-label" for="tw_criterionLinkedCourses_agg_any__{{key}}">
                    {{#str}}complete_any, totara_criteria{{/str}}
                </label>
                <span class="tf_loading" style="display: none;">
                    {{#pix}} i/loading, core, loading, totara_core{{/pix}}
                </span>

                <div data-tw-criterionLinkedCourses-aggregationCount="">
                    <input type="number"
                    name="tw_criterionLinkedCourses_agg_count__{{key}}"
                    value="1" min="1"
                    data-tw-criterionLinkedCourses-aggregationCount-changed=""
                    disabled="disabled"/>
                </div>
                <div class="tw-editAchievementPaths__criterionForm-info tw-editAchievementPaths--hidden"
                     data-tw-criterionLinkedCourses-info="aggregation-count"
                >
                    {{#flex_icon}}notification-info, info, totara_criteria{{/flex_icon}}
                    <span>{{#str}}info_aggregation_minumum, criteria_linkedcourses{{/str}}</span>
                </div>
            </div>
        </div>
    </form>
</div>
