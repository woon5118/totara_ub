{{!
    @template totara_conpetency/action_list

    creates a list view

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-tw-list-order: Target for checking if there is a orderby
    * data-tw-list-count: Target for updating results count
    * data-tw-list-count-num: Target for updating results count text

    Context variables required for this template:
    * has_level_toggle: bool, include level switch buttons
    * has_paging: bool, has paging
    * order_by: markeup for order by tree
}}

<div class="tw-actionList {{^select_enabled}}tw-list--viewer{{/select_enabled}}">
    <div class="tw-list__bar">
        {{! Include toggle level buttons }}
        {{#has_level_toggle}}{{> totara_competency/lists_toggle_level}}{{/has_level_toggle}}

        {{! Include count}}
        {{#has_count}}
        <h3 class="tw-list__count" data-tw-list-count="">
            <span class="tw-list__count_num" data-tw-list-count-num=""></span>
        </h3>
        {{/has_count}}

        {{! Include order by tree }}
        {{#order_by}}
        <div class="tw-list__orderBy" data-tw-list-order="">
            {{{order_by}}}
        </div>
        {{/order_by}}
    </div>

    <div class="tw-list__output">
        {{! Include list for results output }}
        {{> totara_competency/lists }}

        {{! Include paging }}
        {{#has_paging}}{{> totara_competency/paging }}{{/has_paging}}
    </div>
</div>
<div class="tw-list__footer"></div>

