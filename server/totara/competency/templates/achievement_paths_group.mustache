{{!

    @template totara_competency/achievement_paths_group

    This template shows pathway

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-tw-editAchievementPaths-group

    Context variables required for this template:
    * pathway_groups
    * pathway_groups -> group_templatename
    * pathway_groups -> group_templatename -> group_templatename
    * pathway_groups -> pathways

}}

{{#pathway_groups}}
<div class="tw-editAchievementPaths__group {{#hidden}}tw-editAchievementPaths--hidden{{/hidden}}" data-tw-editAchievementPaths-group="{{id}}">
    {{#group_templatename}}
        {{> &&group_templatename}}
    {{/group_templatename}}

    {{^group_templatename}}
        {{#pathways}}
            {{> totara_competency/partial_pathway}}
        {{/pathways}}
    {{/group_templatename}}
</div>
{{/pathway_groups}}
