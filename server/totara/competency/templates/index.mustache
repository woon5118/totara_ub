{{!

    @template totara_competency/index

    This template generates the manage competency assignments page

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-core-autoinitialise: State of this JS auto initilise
    * data-core-autoinitialise-amd: AMD to be linked to template

    Context variables required for this template:
    * content variables for totara_competency/basket_list
    * create_btn_url: string, URL for create btn
    * report_btn_url: string, URL for report btn
    * title: page title
!}}

<div class="tw-assignComp"
    data-core-autoinitialise="true"
    data-core-autoinitialise-amd="totara_competency/manage_assignments">

    <h2 class="tw-assignComp__title">{{title}}</h2>
    <div class="tw-assignComp__pageBtns">
        <a href="{{report_btn_url}}" class="tw-assignComp__btn">
            {{#str}}assignment_view_current, totara_competency{{/str}}
        </a>
        <a href="{{create_btn_url}}" class="tw-assignComp__btn">
            {{#str}}assignment_create_new, totara_competency{{/str}}
        </a>
    </div>

    {{> totara_competency/basket_list}}
</div>