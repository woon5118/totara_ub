{{!
    @template totara_reportedcontent/report_actions

    Action buttons for the Inappropriate content report

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * report_id: ID of the specific report/review to action

    Example context (json):
    {
        "report_id": 123,
    }
}}
<div id="reportedcontent-actions-{{ report_id }}">
    <div class="loading" style="display: none">
        {{#str}} loading, moodle {{/str}}
    </div>
    <div class="label-removed status-1" style="display: none">
        {{#str}} status_removed, rb_source_reportedcontent {{/str}}
    </div>
    <div class="label-approved status-2" style="display: none">
        {{#str}} status_approved, rb_source_reportedcontent {{/str}}
    </div>
    <div class="actions">
        <div>
            <button type="button"
                    class="btn-primary"
                    data-action="remove"
                    data-report="{{ report_id }}"
                    data-modal-title="{{#str}} remove_modal_title, rb_source_reportedcontent {{/str}}"
                    data-modal-content="{{#str}} remove_modal_content, rb_source_reportedcontent {{/str}}"
                    data-yes="{{#str}} confirm, moodle {{/str}}"
                    data-no="{{#str}} cancel, moodle {{/str}}"
            >
                {{#str}} action_remove, rb_source_reportedcontent {{/str}}
            </button>
        </div>
        <div style="margin-top: 0.4rem">
            <button type="button" data-report="{{ report_id }}" data-action="approve">
                {{#str}} action_approve, rb_source_reportedcontent {{/str}}
            </button>
        </div>
    </div>
</div>