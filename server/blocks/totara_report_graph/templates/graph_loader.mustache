{{!
    @template block_totara_report_graph/chart_loader

    This template generates a ChartJS canvas either from data or ajax URL
 }}

{{#data}}
    <div class="block_totara_report_graph__chart">
        {{> totara_reportbuilder/chartjs}}
    </div>
{{/data}}
{{^data}}
    <div class="block_totara_report_graph__chart"
         style="max-width: 100%; max-height: 100%; {{#width}}min-width:{{width}}px;{{/width}}{{#height}}min-height:{{height}}px;{{/height}}"
         data-core-autoinitialise="true"
         data-core-autoinitialise-amd="block_totara_report_graph/graph_loader"
         data-block_totara_report_graph-blockid="{{blockid}}">
         <div role="presentation" class="spinner">{{#flex_icon}}loading, loading, core, ft-size-400{{/flex_icon}}</div>
    </div>
{{/data}}
